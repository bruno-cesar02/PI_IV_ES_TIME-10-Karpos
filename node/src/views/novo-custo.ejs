<%- include('includes/head') %>
<body>
    <div class="container">

        <!-- SIDEBAR -->
        <%- include('includes/navbar')%>

        <!-- MAIN CONTENT -->
        <main class="main-content">
            <!-- TOPBAR -->
            <%- include('includes/topbar')%>

            <!-- PAINEL PRINCIPAL - NOVO CUSTO -->
            <section class="dashboard-panel">
                <div class="panel-header">
                    <div class="page-title">
                        <h2 style="text-align: center;"><%=msg%></h2>
                        <h1>Novo<br>Custo</h1>
                    </div>

                    <div class="panel-actions">
                        <button onclick="document.querySelector('.form-registro').submit()" class="btn btn-primary">Salvar</button>
                        <button onclick="window.location.href='/caderno-campo'" class="btn btn-outline">Cancelar</button>
                    </div>
                </div>
            

                <!-- Formulário -->
                <form action="/novo-custo" method="POST" class="form-registro">
                    <!-- Linha 1: Data e Valor -->
                    <div class="form-group-horizontal">
                        <div class="form-field">
                            <h3 class="field-title">Data do Custo</h3>
                            <p class="field-subtitle">DD/MM/AAAA</p>
                            <input type="date" name="data" class="input-field" required value="<%= dataAtividade || '' %>">
                        </div>

                        <div class="form-field">
                            <h3 class="field-title">Valor</h3>
                            <p class="field-subtitle">R$1.234,56</p>
                            <input type="number" name="valor" class="input-field" step="0.01" placeholder="R$ 0,00" required value="<%= valorPrefill || '' %>">
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="form-field full-width">
                        <h3 class="field-title">Descrição (Opicional)</h3>
                        <p class="field-subtitle">Detalhe a que este custo se refere.</p>
                        <textarea name="descricao" class="textarea-field" rows="4" placeholder="Digite a descrição..." required><%= notas || '' %></textarea>
                    </div>

                    <!-- Linha 2: Categoria e Atividade de Campo -->
                    <div class="form-group-horizontal">
                        <div class="form-field">
                            <h3 class="field-title">Categoria</h3>
                            <p class="field-subtitle">Selecione a Categoria</p>
                            <select name="categoria" class="input-field" required>
                                <option value="">Selecione a Categoria</option>
                                <option value="Insumos">Insumos</option>
                                <option value="Maquinário">Maquinário</option>
                                <option value="Mão de Obra">Mão de Obra</option>
                                <option value="Sementes">Sementes</option>
                                <option value="Fertilizantes">Fertilizantes</option>
                                <option value="Outro">Outro</option>
                            </select>
                        </div>

                        <div class="form-field">
                            <h3 class="field-title">Atividade de Campo (Opcional)</h3>
                            <p class="field-subtitle">Associado/Não Associado</p>
                            <input type="text" name="atividadeAssociada" class="input-field" placeholder="Ex: Plantio de Milho" value="<%= tipoAtividade || '' %>">
                        </div>
                    </div>
                </form>
            </section>
        </main>
    </div>

    <script src="novo-custo.js"></script>
</body>
</html>
