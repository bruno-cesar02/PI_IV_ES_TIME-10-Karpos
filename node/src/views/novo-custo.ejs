<%- include('includes/head') %>
<body>
    <div class="container">

        <!-- SIDEBAR -->
        <%- include('includes/navbar')%>

        <!-- MAIN CONTENT -->
        <main class="main-content">
            <!-- TOPBAR -->
            <%- include('includes/topbar')%>

            <!-- PAINEL PRINCIPAL - NOVO CUSTO -->
            <section class="dashboard-panel">
                <div class="panel-header">
                    <div class="page-title">
                        <h1>Novo<br>Custo</h1>
                    </div>

                    <div class="panel-actions">
                        <button class="btn btn-primary">Salvar</button>
                        <button class="btn btn-outline">Excluir</button>
                    </div>
                </div>

                <!-- Formulário -->
                <form class="form-registro">
                    <!-- Linha 1: Data e Valor -->
                    <div class="form-group-horizontal">
                        <div class="form-field">
                            <h3 class="field-title">Data da Custo</h3>
                            <p class="field-subtitle">DD/MM/AAAA</p>
                            <input type="date" class="input-field" id="dataCusto">
                        </div>

                        <div class="form-field">
                            <h3 class="field-title">Valor</h3>
                            <p class="field-subtitle">R$1.234,56</p>
                            <input type="text" class="input-field" id="valor" placeholder="R$ 0,00">
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="form-field full-width">
                        <h3 class="field-title">Descrição</h3>
                        <p class="field-subtitle">Detalhe à que este custo se refere.</p>
                        <textarea class="textarea-field" id="descricao" rows="4" placeholder="Digite a descrição..."></textarea>
                    </div>

                    <!-- Linha 2: Categoria e Atividade de Campo -->
                    <div class="form-group-horizontal">
                        <div class="form-field">
                            <h3 class="field-title">Categoria</h3>
                            <p class="field-subtitle">Selecione a Categoria</p>
                            <select class="input-field" id="categoria">
                                <option value="">Selecione a Categoria</option>
                                <option value="Insumos">Insumos</option>
                                <option value="Maquinário">Maquinário</option>
                                <option value="Mão de Obra">Mão de Obra</option>
                                <option value="Sementes">Sementes</option>
                                <option value="Fertilizantes">Fertilizantes</option>
                            </select>
                        </div>

                        <div class="form-field">
                            <h3 class="field-title">Atividade de Campo</h3>
                            <p class="field-subtitle">Associado/Não Associado</p>
                            <select class="input-field" id="atividadeCampo">
                                <option value="">Não Associado</option>
                                <option value="associado">Associar a uma atividade</option>
                            </select>
                        </div>
                    </div>
                </form>
            </section>
        </main>
    </div>

    <script src="novo-custo.js"></script>
</body>
</html>
