<%- include('includes/head')%>
<body>
    <div class="container">

        <%- include('includes/navbar')%>

        <!-- MAIN CONTENT -->
        <main class="main-content">
            <!-- TOPBAR arredondada -->
            <%- include('includes/topbar')%>

            <!-- PAINEL PRINCIPAL arredondado -->
            <section class="dashboard-panel">
                <div class="panel-header">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                        <p class="subtitle">Entenda, organize e administre sua lavoura com facilidade</p>
                    </div>

                    <div class="panel-actions">
                        <button type="link" onclick="window.location.href='/novo-registro'" class="btn btn-primary">Novo Registro</button>
                        <button type="link" onclick="window.location.href='/novo-custo'" class="btn btn-outline">Novos Custos</button>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="left-col">
                        <div class="registros-card rounded-card">
                            <div class="registros-header">
                                <h2 class="registros-title">Último<br>Registro</h2>
                                <button style="cursor:pointer" type="link" onclick="window.location.href='/custos-registrados'" class="nav-button">‹</button>
                            </div>
                            <ol class="registros-list">
                                <li><%= atividades.data %></li>
                                <li><%= atividades.dados %></>
                                <li>R$ <%= atividades.custo %></li>
                                <li><%= atividades.tipo %></li>
                                <li><%= atividades.aa || 'N/A' %></li>
                            </ol>
                            <button style="cursor:pointer" type="link" onclick="window.location.href='/custos-registrados'" class="btn-details">Detalhes</button>
                        </div>
                    </div>
                    <div class="right-col">
                        <div class="metric-card total">
                            <div class="metric-left">
                                <h3 class="metric-title">CUSTO TOTAL</h3>
                                <p class="metric-sub">(Custo por Hectare)</p>
                            </div>
                            <div class="metric-right">
                                <div class="metric-value">R$ <%= (parseFloat(receitas) + parseFloat(despesas)).toFixed(2) %></div>
                                <div class="metric-small">R$ <%= porHectare%></div>
                            </div>
                        </div>

                        <div class="metric-card big receita-card">
                            <div class="circle-icon green">↗</div>
                            <div class="metric-content">
                                <h4>RECEITA</h4>
                                <div class="metric-value">+ R$ <%= receitas %></div>
                            </div>
                        </div>

                        <div class="metric-card big despesa-card">
                            <div class="circle-icon red">↘</div>
                            <div class="metric-content">
                                <h4>DESPESAS</h4>
                                <div class="metric-value">- R$ <%= despesas %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="dashboard.js"></script>
</body>
</html>